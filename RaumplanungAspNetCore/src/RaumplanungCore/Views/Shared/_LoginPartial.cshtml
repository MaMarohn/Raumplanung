@using Microsoft.AspNetCore.Identity
@using RaumplanungCore.Models

@inject SignInManager<Teacher> SignInManager
@inject UserManager<Teacher> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index" title="Manage">Hallo @UserManager.FindByNameAsync(UserManager.GetUserName(User)).Result.Anrede @UserManager.FindByNameAsync(User.Identity.Name).Result.Nachname!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link"> Ausloggen </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Register">Registrieren</a></li>
        <li><a asp-controller="Account" asp-action="Login">Einloggen</a></li>
    </ul>
}
