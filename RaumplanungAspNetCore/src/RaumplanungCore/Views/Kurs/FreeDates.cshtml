@{
    ViewData["Title"] = "Termine freigeben";
}
@model IEnumerable<Reservation>

<h1> Löschen Sie einzelne Reservierungen Ihres Kurses, um die Räume für andere zur Reservierung freizugeben </h1>

<table>
    <tr>
        <th> Reservierungsdatum </th>
        <th> Block </th>
        <th> Löschen </th>
    </tr>
    @foreach (var reservation in Model)
    {
        <tr>
            <td> @reservation.Date.Value.ToString("dd.MM.yyyy") </td>
            <td> @reservation.Block </td>
            <td> <a asp-controller="Reservation" asp-action="Delete" asp-route-id=@reservation.ReservationId> Löschen </a></td>
        </tr>
    }
</table>