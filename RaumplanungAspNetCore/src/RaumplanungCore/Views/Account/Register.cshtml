@using System.Threading.Tasks
@model RegisterViewModel
@{
    ViewData["Title"] = "Registrieren";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h4>Neuen Account anlegen.</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label">E-Mail:</label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            @if (ViewData["Emailok"].Equals("false"))
             {<font color="red">
                <label asp-for="Email" class="col-md-2 control-label">Ungültige Mailadresse! Es sind nur Lehrermailadressen der Form "xxxx@lioba.de" gültig.</label></font> }
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Anrede" class="col-md-2 control-label">Anrede:</label>
        <div class="col-md-10">
            <select asp-for="Anrede" class="form-control">
                <option value="Frau">Frau</option>
                <option value="Herr">Herr</option>
            </select>
            <span asp-validation-for="Anrede" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Nachname" class="col-md-2 control-label">Nachname:</label>
        <div class="col-md-10">
            <input asp-for="Nachname" class="form-control" />
            <span asp-validation-for="Nachname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Vorname" class="col-md-2 control-label">Vorname:</label>
        <div class="col-md-10">
            <input asp-for="Vorname" class="form-control" />
            <span asp-validation-for="Vorname" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Password" class="col-md-2 control-label">Passwort:</label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-2 control-label">Passwort bestätigen:</label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <!--<label asp-for="Admin" class="col-md-2 control-label">Admin:</label>-->
        <div class="col-md-10">
            <!--<input asp-for="Admin" type="checkbox" value="true" />-->
            <input asp-for="Admin" type="hidden" value="false"/>
            <span asp-validation-for="Admin" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Registrieren</button>
        </div>
    </div>
    
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

